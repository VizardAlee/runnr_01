<% if current_user == @store.user %>
  <%= form_with(model: [@store, @product], url: add_quantity_store_product_path(@store, @product), method: :patch, class: 'flex items-center mt-4') do |form| %>
    <%= form.number_field :quantity, min: 1, value: 1, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mr-2" %>
    <%= form.submit "Add Quantity", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>
<% end %>
